<%- contentFor('body') %>
<h2>Produtos cadastrados</h2>
<a href="/produtoscadastro"><button class="btn btn-primary btn-lg">Cadastrar Novo</button></a><br>
<table class="table table-striped table-bordered table-condensed table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Status</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
<% if(!(typeof retorno == "undefined")) { %>
        <% for(produto of retorno) { 
            
        %>
        <tr>
            <td>
                <%= produto.id %>
            </td>
            <td>
                <%= produto.nome %>
            </td>
            <td>
                <%= produto.descricao %>
            </td>
            <td>
                <%= produto.valor %>
            </td>
            <td>
                <%= produto.status %>
            </td>
            <td> - </td>
        </tr>
        <% } %>
<% } %>
    </tbody>
</table>
